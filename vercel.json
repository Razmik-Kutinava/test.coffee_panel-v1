{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "backend/api/index.ts",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/api/index.ts"
    },
    {
      "src": "/locations(.*)",
      "dest": "/backend/api/index.ts"
    },
    {
      "src": "/products(.*)",
      "dest": "/backend/api/index.ts"
    },
    {
      "src": "/orders(.*)",
      "dest": "/backend/api/index.ts"
    },
    {
      "src": "/categories(.*)",
      "dest": "/backend/api/index.ts"
    },
    {
      "src": "/users(.*)",
      "dest": "/backend/api/index.ts"
    },
    {
      "src": "/promocodes(.*)",
      "dest": "/backend/api/index.ts"
    },
    {
      "src": "/broadcasts(.*)",
      "dest": "/backend/api/index.ts"
    },
    {
      "src": "/modifier-groups(.*)",
      "dest": "/backend/api/index.ts"
    },
    {
      "src": "/modifier-options(.*)",
      "dest": "/backend/api/index.ts"
    },
    {
      "src": "/dashboard(.*)",
      "dest": "/backend/api/index.ts"
    },
    {
      "src": "/barista(.*)",
      "dest": "/backend/api/index.ts"
    },
    {
      "src": "/tv-board(.*)",
      "dest": "/backend/api/index.ts"
    },
    {
      "src": "/assets/(.*)",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      },
      "dest": "/frontend/dist/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/dist/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}

